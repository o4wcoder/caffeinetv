<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/landingFragment"
        android:name="tv.caffeine.app.auth.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/action_landingFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_landingFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_landingFragment_to_lobby"
            app:destination="@id/lobby" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="tv.caffeine.app.auth.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_lobby"
            app:destination="@id/lobby" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="tv.caffeine.app.auth.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_forgotFragment"
            app:destination="@id/forgotFragment" />
        <action
            android:id="@+id/action_signInFragment_to_lobby"
            app:destination="@id/lobby" />
        <action
            android:id="@+id/action_signInFragment_to_mfaCodeFragment"
            app:destination="@id/mfaCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotFragment"
        android:name="tv.caffeine.app.auth.ForgotFragment"
        android:label="fragment_forgot"
        tools:layout="@layout/fragment_forgot" />
    <include app:graph="@navigation/lobby" />
    <fragment
        android:id="@+id/mfaCodeFragment"
        android:name="tv.caffeine.app.auth.MfaCodeFragment"
        android:label="fragment_mfa_code"
        tools:layout="@layout/fragment_mfa_code" >
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <action
            android:id="@+id/action_mfaCodeFragment_to_lobby"
            app:destination="@id/lobby" />
    </fragment>
</navigation>
