<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <ScrollView
        style="@style/NoBarScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.ForgotFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                style="@style/UnauthScreenTitle"
                android:layout_width="@dimen/big_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="@string/reset_your_password"/>

            <TextView
                style="@style/FormErrorText"
                android:id="@+id/form_error_text_view"
                android:layout_width="@dimen/big_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/reset_your_password_description"/>

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BigEditText.FixedSize"
                android:id="@+id/email_edit_text"
                android:layout_marginTop="20dp"
                android:hint="@string/unauth_hint_email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionSend"/>

            <Button
                style="@style/Button.VeryBig.FixedSize"
                android:id="@+id/send_email_button"
                android:layout_marginTop="@dimen/margin"
                android:text="@string/send_email_button"/>
        </LinearLayout>
    </ScrollView>
</layout>
