<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_list"
        android:paddingBottom="@dimen/margin_list"
        android:background="@drawable/gray_top_divider">

        <ImageView
            android:id="@+id/detail_image_view"
            android:layout_width="@dimen/featured_guide_detail_image_width"
            android:layout_height="@dimen/featured_guide_detail_image_height"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/featured_event_image_content_description"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            tools:scaleType="fitXY"/>

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_list"
            android:includeFontPadding="false"
            android:textColor="@color/almost_black"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/detail_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/guide.json/listings/title"/>

        <TextView
            android:id="@+id/us_only_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/us_only_description"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/description_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_text_view"
            tools:visibility="visible"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
