<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <ScrollView
        style="@style/NoBarScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_double"
            tools:context=".auth.LandingFragment">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:src="@drawable/logo_wordmark"
                android:contentDescription="@string/caffeine_logo_content_description"/>

            <TextView
                style="@style/ScreenSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="@string/landing_signup_prompt"
                android:textAlignment="center"/>

            <TextView
                style="@style/FormErrorText"
                android:id="@+id/form_error_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                tools:text="Sign in failed."/>

            <Button
                style="@style/SocialSignInButton.Facebook"
                android:id="@+id/facebook_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:text="@string/sign_in_with_facebook"/>

            <Button
                style="@style/SocialSignInButton.Twitter"
                android:id="@+id/twitter_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_with_twitter"/>

            <Button
                style="@style/Button.Outline"
                android:id="@+id/new_account_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_account"/>

            <Button
                style="@style/Button.Outline"
                android:id="@+id/sign_in_with_email_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_with_email"/>
        </LinearLayout>
    </ScrollView>
</layout>
