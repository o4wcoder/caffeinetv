<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".auth.LandingFragment">

    <data>
    </data>

    <ScrollView
        style="@style/NoBarScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:src="@drawable/caffeine_logo_80"
                android:contentDescription="@string/caffeine_logo_content_description"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/caffeine_wordmark"
                android:contentDescription="@string/caffeine_logo_content_description"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/pre_release"
                android:contentDescription="@string/pre_release"/>

            <TextView
                style="@style/UnauthScreenTitle"
                android:layout_width="@dimen/big_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/landing_signup_prompt"/>

            <Button
                style="@style/Button.Big.FixedSize.Facebook"
                android:id="@+id/facebook_sign_in_button"
                android:layout_marginTop="36dp"
                android:text="@string/continue_with_facebook" />

            <Button
                style="@style/Button.Big.FixedSize.Twitter"
                android:id="@+id/twitter_sign_in_button"
                android:layout_marginTop="@dimen/margin_list"
                android:text="@string/continue_with_twitter"/>

            <Button
                style="@style/Button.Big.FixedSize.Email"
                android:id="@+id/new_account_button"
                android:layout_marginTop="48dp"
                android:text="@string/sign_up_with_email"/>

            <TextView
                style="@style/LightText"
                android:id="@+id/sign_in_with_username_prompt_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sign_in_with_username_prompt"/>
            <TextView
                style="@style/LinkText"
                android:id="@+id/sign_in_with_username_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:text="@string/sign_in_with_username"/>
        </LinearLayout>
    </ScrollView>
</layout>
