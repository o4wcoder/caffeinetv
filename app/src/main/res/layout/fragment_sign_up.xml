<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <ScrollView
        style="@style/NoBarScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.SignUpFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                style="@style/UnauthScreenTitle"
                android:layout_width="@dimen/big_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="@string/sign_up_for_caffeine"/>

            <TextView
                style="@style/FormErrorText"
                android:id="@+id/form_error_text_view"
                android:layout_width="@dimen/big_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sign_up_description"/>

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BigEditText.FixedSize"
                android:id="@+id/email_edit_text"
                android:layout_marginTop="20dp"
                android:hint="@string/unauth_hint_email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"/>

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BigEditText.FixedSize"
                android:id="@+id/username_edit_text"
                android:layout_marginTop="12dp"
                android:hint="@string/unauth_hint_username"
                android:inputType="text"
                android:maxLength="@integer/max_username_length"
                android:imeOptions="actionNext"/>

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BigEditText.FixedSize"
                android:id="@+id/password_edit_text"
                android:layout_marginTop="12dp"
                android:hint="@string/unauth_hint_password"
                android:inputType="textPassword"
                android:imeOptions="actionNext"/>

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/BigEditText.FixedSize"
                android:id="@+id/dob_edit_text"
                android:layout_marginTop="12dp"
                android:hint="@string/sign_up_hint_birthday"
                android:inputType="none"
                android:editable="false"
                android:textIsSelectable="false"
                android:imeOptions="actionNext"/>

            <Button
                style="@style/Button.VeryBig.FixedSize"
                android:id="@+id/sign_up_button"
                android:layout_marginTop="20dp"
                android:text="@string/sign_up_button"/>

            <TextView
                style="@style/LightText"
                android:id="@+id/agree_to_legal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAlignment="center"
                tools:text="By continuing, you agree to Caffeine's Terms of Service, Privacy Policy and Community Guidelines"/>
        </LinearLayout>
    </ScrollView>
</layout>
