<layout>
    <data>
        <variable
            name="viewModel"
            type="tv.caffeine.app.login.WelcomeViewModel" />
    </data>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tv.caffeine.app.login.WelcomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/sign_in_flow_start_padding"
        android:paddingEnd="@dimen/sign_in_flow_end_padding">

        <TextView
            style="@style/SignUpText.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_title_margin_top"
            android:text="@string/welcome_title" />

        <TextView
            style="@style/SignUpText.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_subtitle_one_margin_top"
            android:text="@string/welcome_subtitle_one" />

        <TextView
            style="@style/SignUpText.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_subtitle_two_margin_top"
            android:text="@string/welcome_subtitle_two" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_email_link_margin_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{viewModel.emailDisplayVisibility}">

                <TextView
                    style="@style/SignUpText.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_email_sent_to" />

                <TextView
                    style="@style/SignUpText.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.email}"/>
            </LinearLayout>

            <TextView
                style="@style/SignUpLinkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_resend_email"
                android:visibility="@{viewModel.resendEmailVisibility}"
                android:onClick="@{() -> viewModel.onResendEmailClick()}"/>
        </FrameLayout>

        <Button
            style="@style/SignUpButton"
            android:id="@+id/lets_go_button"
            android:layout_marginTop="@dimen/welcome_button_margin_top"
            android:layout_gravity="center"
            android:text="@string/welcome_lets_go_button" />
    </LinearLayout>

</ScrollView>
</layout>
