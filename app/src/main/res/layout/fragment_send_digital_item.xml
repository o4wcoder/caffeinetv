<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="digitalItem"
            type="tv.caffeine.app.api.DigitalItem"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/di_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/digital_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/di_quantity_number_picker"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_digital_items"
            tools:tint="@color/caffeine_blue"/>

        <NumberPicker
            android:id="@+id/di_quantity_number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/di_image_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/message_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/barrier"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom" />

        <EditText
            android:id="@+id/message_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/message"
            android:inputType="textCapSentences"
            android:imeOptions="actionSend"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/send_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier"/>

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            app:layout_constraintBaseline_toBaselineOf="@+id/message_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/message_edit_text" />

        <TextView
            android:id="@+id/wallet_balance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="700" />

        <TextView
            android:id="@+id/gold_cost_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{Integer.toString(digitalItem.goldCost)}"
            app:layout_constraintEnd_toEndOf="@+id/di_image_view"
            app:layout_constraintStart_toEndOf="@+id/gold_coin_image_view"
            app:layout_constraintTop_toBottomOf="@+id/di_image_view"
            tools:text="700" />

        <ImageView
            android:id="@+id/gold_coin_image_view"
            android:layout_width="@dimen/coin_size"
            android:layout_height="@dimen/coin_size"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/gold_coin_content_description"
            app:layout_constraintBottom_toBottomOf="@+id/gold_cost_text_view"
            app:layout_constraintEnd_toStartOf="@+id/gold_cost_text_view"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/di_image_view"
            app:layout_constraintTop_toTopOf="@+id/gold_cost_text_view"
            app:srcCompat="@drawable/gold_coin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
