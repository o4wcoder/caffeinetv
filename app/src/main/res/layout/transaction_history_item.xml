<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="digitalItemImageUrl"
            type="java.lang.String"/>
        <variable
            name="itemCost"
            type="java.lang.String"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transaction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sent" />

        <TextView
            android:id="@+id/timestamp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            tools:text="10/25/18 9:42:25 AM"
            app:layout_constraintBaseline_toBaselineOf="@+id/transaction_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/avatar_image_view"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_title"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/ExploreUsername.NotFollowing"
            android:drawablePadding="@dimen/verified_icon_padding"
            tools:drawableEnd="@drawable/verified_large"
            tools:text="Caffeine"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_image_view"
            app:layout_constraintStart_toEndOf="@+id/avatar_image_view"
            app:layout_constraintTop_toTopOf="@+id/avatar_image_view" />

        <ImageView
            android:id="@+id/digital_item_image_view"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:imageUrl="@{digitalItemImageUrl}"
            app:layout_constraintBottom_toBottomOf="@+id/username_text_view"
            app:layout_constraintStart_toEndOf="@+id/username_text_view"
            app:layout_constraintTop_toTopOf="@+id/username_text_view"
            tools:src="@drawable/ic_notifications_black_24dp" />

        <ImageView
            android:id="@+id/gold_coin_image_view"
            android:layout_width="@dimen/coin_size"
            android:layout_height="@dimen/coin_size"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/digital_item_image_view"
            app:layout_constraintTop_toTopOf="@+id/username_text_view"
            app:layout_constraintBottom_toBottomOf="@+id/username_text_view"
            app:srcCompat="@drawable/gold_coin" />

        <TextView
            android:id="@+id/gold_cost_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@{itemCost}"
            app:layout_constraintStart_toEndOf="@+id/gold_coin_image_view"
            app:layout_constraintTop_toTopOf="@+id/username_text_view"
            app:layout_constraintBottom_toBottomOf="@+id/username_text_view"
            tools:text="700" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
