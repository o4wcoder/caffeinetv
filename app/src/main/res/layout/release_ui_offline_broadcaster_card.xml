<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="tv.caffeine.app.lobby.release.OfflineBroadcaster"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/online_broadcaster_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.cardClicked()}">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/very_light_gray"
            android:layout_marginStart="@dimen/lobby_card_side_padding"
            android:layout_marginEnd="@dimen/lobby_card_side_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/avatar_image_view"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            app:roundedImageUrl="@{viewModel.avatarImageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/default_avatar_round" />

        <TextView
            android:id="@+id/username_text_view"
            style="@style/OfflineBroadcast_Large_Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lobby_card_side_padding"
            android:drawableEnd="@{viewModel.userIcon}"
            android:text="@{viewModel.username}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:drawableEnd="@drawable/verified"
            tools:drawablePadding="@dimen/verified_icon_padding"
            tools:text="@sample/usernames" />

        <ImageView
            android:id="@+id/follow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="@{() -> viewModel.followClicked()}"
            android:src="@{viewModel.isFollowing() ? @drawable/star_filled : @drawable/star_outline}"
            android:text="@string/follow_button"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/username_text_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/star_outline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
