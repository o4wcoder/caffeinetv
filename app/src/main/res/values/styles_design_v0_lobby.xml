<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LobbyCardText" parent="CaffeineText.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LobbyHeaderRelease" parent="LobbyCardText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">@dimen/lobby_card_side_padding_release</item>
        <item name="android:paddingEnd">@dimen/lobby_card_side_padding_release</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="LobbySubtitleRelease" parent="LobbyHeaderRelease">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="LobbyCardLiveBadge" parent="LobbyCardText">
        <item name="android:layout_height">@dimen/release_lobby_card_badge_height</item>
        <item name="android:background">@color/pure_blue</item>
        <item name="android:paddingStart">@dimen/lobby_card_side_padding_release</item>
        <item name="android:paddingEnd">@dimen/lobby_card_side_padding_release</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="LobbyCardContentRating" parent="LobbyCardLiveBadge">
        <item name="android:background">@color/black</item>
        <item name="android:paddingStart">@dimen/lobby_card_side_padding_mini</item>
        <item name="android:paddingEnd">@dimen/lobby_card_side_padding_mini</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LobbyCardTitle" parent="LobbyCardText">
        <item name="android:textSize">@dimen/release_lobby_card_title</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    <style name="LobbyCardTitle.Mini">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/release_lobby_card_title_mini</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LobbyCardUsername" parent="CaffeineText.Medium">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LobbyCardUsername.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LobbySingleCategoryText" parent="LobbyCardText">
        <item name="android:textSize">@dimen/lobby_category_single_text</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>
    <style name="LobbyDoubleCategoryText" parent="LobbyCardText">
        <item name="android:textSize">@dimen/lobby_category_double_text</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="VerifyEmailContainer">
        <item name="android:background">@color/very_very_light_gray</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">@dimen/release_lobby_card_side_margin</item>
        <item name="android:paddingEnd">@dimen/release_lobby_card_side_margin</item>
    </style>

    <style name="VerifyEmailText" parent="CaffeineText.SemiBold">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">@dimen/lobby_card_side_padding_release</item>
        <item name="android:paddingEnd">@dimen/lobby_card_side_padding_release</item>
    </style>
</resources>
