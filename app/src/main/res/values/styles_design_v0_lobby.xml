<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LobbyCardText" parent="CaffeineText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="OnlineBroadcast_Large_Title" parent="LobbyCardText">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="OnlineBroadcast_Large_Friends" parent="LobbyCardText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="OnlineBroadcast_Large_Username" parent="LobbyCardText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OfflineBroadcast_Large_Username" parent="LobbyCardText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ReleaseUI_Lobby_Header" parent="LobbyCardText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ReleaseUI_Lobby_Subtitle" parent="LobbyCardText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="VerifyEmailContainer">
        <item name="android:background">@color/black</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="VerifyEmailText" parent="CaffeineText.Release">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

</resources>
