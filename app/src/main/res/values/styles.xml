<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="materialButtonStyle">@style/Button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="ActionButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="LinkButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ScreenTitle" parent="@style/TextAppearance.MaterialComponents.Headline5">

    </style>

    <style name="OutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

</resources>
