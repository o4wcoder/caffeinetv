<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StageChatText" parent="CaffeineText.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="StageChatUpvote" parent="CaffeineText.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="StageChatUsername" parent="StageChatText">
        <item name="android:textColor">@color/medium_gray</item>
    </style>

    <style name="StageChatText.UserReference">
        <item name="android:textColor">@color/chat_username_not_follow</item>
    </style>
    <style name="StageChatText.UserReference.FromSelf">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="StageChatText.UserReference.MentionSelf">
        <item name="android:textColor">@color/cyan</item>
    </style>
    <style name="StageButton" parent="CaffeineText.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/ic_btn_send</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="StageChatText.DigitalItemCount">
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:background">@drawable/digital_item_count_background</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>
</resources>
